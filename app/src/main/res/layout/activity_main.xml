<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/btn_personal_info"
        style="@style/ButtonStyle"
        android:layout_width="140dp"
        android:onClick="goPersonalInfoActivity"
        android:text="@string/personal_info"
        app:layout_constraintBottom_toTopOf="@+id/btn_education"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_education"
        style="@style/ButtonStyle"
        android:layout_width="140dp"
        android:onClick="goEducationActivity"
        android:text="@string/education"
        app:layout_constraintBottom_toTopOf="@+id/btn_skills"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_personal_info" />

    <Button
        android:id="@+id/btn_skills"
        style="@style/ButtonStyle"
        android:layout_width="140dp"
        android:layout_marginBottom="8dp"
        android:onClick="goSkillsActivity"
        android:text="@string/Skills"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_education" />
</android.support.constraint.ConstraintLayout>